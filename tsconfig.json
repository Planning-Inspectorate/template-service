{
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "packages/database/src/client/**", "**/*.test.ts"],
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"noImplicitAny": false,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"checkJs": false,
		"erasableSyntaxOnly": true,
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"noEmit": true,
		"strict": true,
		"target": "esnext"
	}
}
