{
  "name": "service-name",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "commitlint": "commitlint --from=$(git cherry origin/main | head -n 1 | cut -c 3-)",
    "db-migrate-dev": "npm run migrate-dev --workspace @pins/service-name-database",
    "db-migrate-prod": "npm run migrate-prod --workspace @pins/service-name-database",
    "db-generate": "npm run generate --workspace @pins/service-name-database",
    "db-seed": "npm run seed --workspace @pins/service-name-database",
    "db-seed-prod": "npm run seed:prod --workspace @pins/service-name-database",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "npx eslint .",
    "prepare": "node .husky/install.mjs",
    "test": "node --test",
    "test-coverage": "node --test --experimental-test-coverage"
  },
  "dependencies": {
    "@azure/identity": "^4.10.1",
    "@azure/msal-node": "^3.6.3",
    "@prisma/client": "^6.11.1",
    "accessible-autocomplete": "^3.0.1",
    "body-parser": "^2.2.0",
    "connect-redis": "^9.0.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "govuk-frontend": "^5.11.1",
    "helmet": "^8.1.0",
    "nunjucks": "^3.2.4",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "redis": "^5.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@microsoft/microsoft-graph-types": "^2.40.0",
    "cookie-parser": "^1.4.7",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^6.11.1",
    "sass": "^1.89.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{js,ts,json,md,prisma,yml,yaml,scss}": [
      "prettier --write"
    ]
  }
}
